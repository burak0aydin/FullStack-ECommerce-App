{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "routes/**/*.js",
    "models/**/*.js",
    "middlewares/**/*.js",
    "utils/**/*.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/tests/**/*.spec.js"
  ],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true
}
